<% layout('layouts/boilerplate') %> 
<style type= "text/css">
    label{
        width: 150px;
        display: inline-block
    }

    #shifts{
        width: 100px;
    }
      
</style>


    <form action= "/buses" method = "POST">  
        <div>
            <label for= "make">Make: </label>
            <input type="text" id="make" name="abus[make]">
        </div>
        <div>
            <label for= "model">Model: </label>
            <input type="text" id="model" name="abus[model]">
        </div>
        <div>
            <label for= "capacity">Capacity: </label>
            <input type="number" id="make" name="abus[capacity]">
        </div>
        <div>
            <label for ="shifts">Select your shift: </label>
            <select class="form-select" aria-label="shift" id="shifts">
                <option value="shift1">8:00am to 12:00pm</option>
                <option value="shift2">12:00pm to 04:00pm</option>
                <option value="shift3">10:00am to 1:00pm </option>
            </select> 
        </div>
        <div>
            <button class="btn btn-info btn">Add New Bus</button>
        </div>
        
        
    </form>
    <footer>
        
        <a href="/buses" class="btn btn-secondary btn" >All bus driver</a>
    </footer>
