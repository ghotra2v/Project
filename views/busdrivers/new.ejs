<% layout('layouts/boilerplate') %> 
    <form action= "/busdrivers" method = "POST">  
    <div class="row gy-2 gx-3 align-items-center" >
        <div class="col-auto">
            <label for= "first">First Name: </label>
            <input type="first" id="firstname" name="driver[first]">
        </div>
        <div class="col-auto">
            <label for= "last">Last Name: </label>
            <input type="last" id="lastname" name="driver[last]">
        </div>
        <div class="col-auto">
            <label for= "SSN">SSN: </label>
            <input type="number" id="SSN" name="driver[SSN]">
        </div class="col-auto">
        <div>
            <button type="submit" class="btn btn-primary">Add New Driver</button>
         </div> 
        </form>
    
    <footer>
        <a href="/busdrivers" class="btn btn-secondary btn" tabindex="-1" role="button" aria-disabled="true">All bus driver</a>
    </footer>
