<% layout('layouts/boilerplate') %> 

    <h1>Edit Bus Driver info</h1>
    <p>
        <form action= "/busdrivers/<%= driver._id%>?_method=PUT " method = "POST">  
        <div>
            <label for= "first" class="d-inline-flex p-2 bd-highlight" >First Name: </label>
            <input type="first" id="firstname" name="driver[first]" value="<%=driver.first %> " class="border- 0" >
        </div>
        <div>
            <label for= "last" class="d-inline-flex p-2 bd-highlight">Last Name: </label>
            <input type="last" id="lastname" name="driver[last]" value="<%=driver.last%>" >
        </div>
        <div>
            <label for= "SSN" class="d-inline-flex p-2 bd-highlight">SSN: </label>
            <input type="number" id="SSN" name="driver[SSN]" value="<%=driver.SSN %>"  >
        </div>       
    </form>
</p>
    <p>
        <button class="btn btn-info">Update Driver Info</button>
    </p>
    <footer>
        <a href="/busdrivers/<%= driver._id %>"class="btn btn-secondary btn" >Back to Driver</a>
    </footer>
